<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="256dp"
              android:id="@+id/background_notification">
    <TextView
        android:id="@+id/hall_temperature_textview_notification"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:background="@android:color/transparent"
            android:contentDescription="@string/work_light"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/work_light_button_notification"/>
        <ImageButton
            android:background="@android:color/transparent"
            android:contentDescription="@string/blue_light"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/blue_light_button_notification"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:background="@android:color/transparent"
            android:contentDescription="@string/kitchen_light"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/kitchen_light_button_notification"/>
        <ImageButton
            android:background="@android:color/transparent"
            android:contentDescription="@string/kitchen_kettle"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/kitchen_kettle_button_notification"/>
    </LinearLayout>

</LinearLayout>